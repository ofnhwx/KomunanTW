<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/retweet_by"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawablePadding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/tweet_user_icon"
                app:roundAsCircle="true"
                app:layout_constraintTop_toBottomOf="@id/retweet_by"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_goneMarginTop="0dp"
                android:layout_marginTop="4dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        <LinearLayout
                android:id="@+id/top_container"
                app:layout_constraintTop_toBottomOf="@id/retweet_by"
                app:layout_constraintStart_toEndOf="@id/tweet_user_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_goneMarginTop="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tweet_user_name"
                    app:layout_constraintStart_toEndOf="@id/tweet_user_icon"
                    android:text="@string/dummy"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView
                    android:id="@+id/tweet_user_screen_name"
                    app:layout_constraintStart_toEndOf="@id/tweet_user_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/dummy"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
                android:id="@+id/tweet_text"
                app:layout_constraintTop_toBottomOf="@id/top_container"
                app:layout_constraintStart_toEndOf="@id/tweet_user_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/dummy"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        <LinearLayout
                android:id="@+id/bottom_container"
                app:layout_constraintTop_toBottomOf="@id/action_container"
                app:layout_constraintStart_toEndOf="@id/tweet_user_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tweet_date_time"
                    android:text="@string/dummy"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView
                    android:id="@+id/tweet_via"
                    android:text="@string/dummy"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/action_container"
                app:layout_constraintTop_toBottomOf="@id/tweet_text"
                app:layout_constraintStart_toEndOf="@id/tweet_user_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageButton
                    android:id="@+id/tweet_action_reply"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            <Button
                    android:id="@+id/tweet_action_retweet"
                    android:text="@string/dummy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <Button
                    android:id="@+id/tweet_action_like"
                    android:text="@string/dummy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
