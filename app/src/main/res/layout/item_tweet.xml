<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/tweet_user_icon"
            app:roundAsCircle="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    <TextView
            android:id="@+id/tweet_user_name"
            app:layout_constraintStart_toEndOf="@id/tweet_user_icon"
            android:text="@string/dummy"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/tweet_user_screen_name"
            app:layout_constraintStart_toEndOf="@id/tweet_user_name"
            app:layout_constraintEnd_toStartOf="@id/tweet_date_time"
            android:text="@string/dummy"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/tweet_date_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/dummy"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/tweet_text"
            app:layout_constraintTop_toBottomOf="@id/tweet_user_name"
            app:layout_constraintStart_toEndOf="@id/tweet_user_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/dummy"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>
